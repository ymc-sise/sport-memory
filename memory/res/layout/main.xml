<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

            <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/running" />
    
    <Button
        android:id="@+id/impressum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/impressum" />

    <Button
        android:id="@+id/einstellung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/impressum"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="40dp"
        android:text="@string/einstellung" />

    <Button
        android:id="@+id/spielen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/einstellung"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="40dp"
        android:text="@string/spielen" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="16dp"
        android:text="@string/version10" />

</RelativeLayout>